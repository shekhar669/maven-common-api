{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "separate-pull-requests": false,
  "include-component-in-tag": true,
  "packages": {
    ".": {
      "release-type": "simple",
      "package-name": "maven-monorepo-example",
      "extra-files": [
        "version.txt",
        "pom.xml"
      ]
    },
    "security": {
      "release-type": "simple",
      "package-name": "security",
      "extra-files": [
        "security/version.txt",
        "security/pom.xml"
      ]
    },
    "services/service1": {
      "release-type": "simple",
      "package-name": "service1",
      "extra-files": [
        "services/service1/pom.xml",
        "services/service1/version.txt"
      ]
    },
    "services/service2": {
      "release-type": "simple",
      "package-name": "service2",
      "extra-files": [
        "services/service2/pom.xml",
        "services/service2/version.txt"
      ]
    }
  }
}
