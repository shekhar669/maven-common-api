{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "include-component-in-tag": true,
  "packages": {
    ".": {
      "release-type": "simple",
      "package-name": "core",
      "component": "core",
      "separate-pull-requests": false,
      "include-v-in-tag": true,
      "extra-files": [
        {
          "type": "generic",
          "path": "version.txt",
          "glob": false
        },
        {
          "type": "pom-xml",
          "path": "pom.xml",
          "glob": false
        },
        {
          "type": "generic",
          "path": "security/version.txt",
          "glob": false
        },
        {
          "type": "pom-xml",
          "path": "security/pom.xml",
          "glob": false
        },
        {
          "type": "generic",
          "path": "services/service1/version.txt",
          "glob": false
        },
        {
          "type": "pom-xml",
          "path": "services/service1/pom.xml",
          "glob": false
        }
      ]
    },
    "services/service2": {
      "release-type": "simple",
      "package-name": "service2",
      "component": "service2",
      "separate-pull-requests": true,
      "include-v-in-tag": true,
      "extra-files": [
        {
          "type": "generic",
          "path": "services/service2/version.txt",
          "glob": false
        },
        {
          "type": "pom-xml",
          "path": "services/service2/pom.xml",
          "glob": false
        }
      ]
    }
  },
  "changelog-sections": [
    {"type": "feat", "section": "Features"},
    {"type": "fix", "section": "Bug Fixes"},
    {"type": "chore", "section": "Miscellaneous", "hidden": true}
  ]
}
